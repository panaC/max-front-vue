{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "*": [
            "node_modules/*",
            "src/types/*"
          ]
        },
        "lib": [
            "es2015",
            "dom"
        ],
    },
    "include": [
        "./src/**/*"
    ]
}
